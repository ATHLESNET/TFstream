<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title>Wind - TRACK RESULTS - TFstream</title>
</head>
<body>
    <p id="wind"></p>

    <script>
        const socket = new WebSocket("ws://192.168.1.75:8880")

        socket.addEventListener("message", (event) => {
        let jsonData = JSON.parse(event.data);

        if (jsonData.command == "resultsComponents") {
            document.getElementById("wind").textContent = jsonData.wind + " m/s";
        } else {return}
    })
    </script>

<style>
    #wind {
        color: white;
      font-family: "Ubuntu", sans-serif;
      font-weight: 700;
      font-style: normal;
      font-size: 50px;
      position: absolute;
      padding-top: 0;
      padding-left: 0;
    }

  </style>
</body>
</html>